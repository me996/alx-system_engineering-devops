#!/usr/bin/env bash
#Install nginx web server

# Update package index and install nginx
sudo apt-get update
sudo apt-get install -y nginx

# Ensure nginx is listening on port 80 by modifying default configuration
sudo sed -i 's/^\(listen\s*\(.*\):\)\(.*\)/\180;/g' /etc/nginx/sites-available/default

# Restart nginx to apply changes
sudo service nginx restart

# Create a temporary index.html file with "Hello World!"
echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null

# Display a message indicating setup completion
echo "Nginx installed and configured. It should now serve 'Hello World!' at http://localhost/"

